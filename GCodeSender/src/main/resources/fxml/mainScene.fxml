<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="600.0" minWidth="800.0" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.collaud.fablab.gcodesender.controller.MainController">
   <bottom>
        <Label fx:id="label" minHeight="16" minWidth="69" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/fablab-logo.jpg" />
               </image>
            </ImageView>
            <GridPane hgap="5.0" layoutX="2.0" layoutY="2.0" vgap="5.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <ComboBox fx:id="comboPort" prefWidth="150.0" promptText="Chose a port" />
                  <Button mnemonicParsing="false" onAction="#reloadPorts" text="Reload port list" GridPane.columnIndex="1" />
                  <Button mnemonicParsing="false" onAction="#chooseGCodeFile" text="Choose gcode file" GridPane.rowIndex="1" />
                  <Label fx:id="labelFile" minWidth="400.0" text="No file selected yet asfls sa kdfls sldfk jsdlf" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="buttonPrint" mnemonicParsing="false" onAction="#print" text="Print that egg !" GridPane.rowIndex="2" />
               </children>
            </GridPane>
         </children>
      </HBox>
   </top>
   <center>
      <TextArea fx:id="textLog" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
